<form action="/createleague/create" method="post">
  <div>
    <label for="leagueName">League Name:</label>
    <input type="text" id="leagueName" name="leagueName">
    <input type="hidden" id="username" name="username" value="{{user.username}}">
  </div>
  <div>
    <label for="numPlayers">Players per Team:</label>
    <input type="text" id="numPlayers" name="numPlayers">
  </div>
  <div>
    <label for="teamName">Your Team Name:</label>
    <input type="text" id="teamName" name="teamName">
  </div>
  <div class="button">
    <button type="submit">Create League</button>
  </div>
</form>